<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsAndBalance.ProceedToPayFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Order"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/salsa"/>

        <TextView
            android:id="@+id/subTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="88dp"
            android:text="SubTotal"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"
            />

        <TextView
            android:id="@+id/subTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="Rs 0"
            android:layout_marginStart="280dp"
            android:layout_alignBaseline="@id/subTotal"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"
            />

        <TextView
            android:id="@+id/gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="52dp"
            android:text="GST"
            android:layout_below="@id/subTotal"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"/>


        <TextView
            android:id="@+id/gstValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="Rs 0"
            android:layout_marginStart="280dp"

            android:layout_below="@id/subTotalValue"
            android:layout_alignBaseline="@id/gst"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"
            />


        <TextView
            android:id="@+id/grandTotalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="52dp"
            android:text="Grand Total"
            android:layout_below="@id/gst"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"/>

        <TextView
            android:id="@+id/grandTotalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs 0"
            android:layout_marginStart="280dp"
            android:layout_below="@id/gstValue"
            android:layout_marginTop="52dp"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"/>
        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grandTotalText"
            android:layout_marginStart="48dp"
            android:layout_marginTop="40dp"
            android:text="Balance"
            android:textSize="19sp"
            android:fontFamily="@font/salsa"/>
        <TextView
            android:id="@+id/balanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="280dp"
            android:layout_below="@id/grandTotalValue"
            android:layout_marginTop="40dp"
            android:textSize="19sp"
            android:text="Rs.0"
            android:layout_alignBaseline="@id/balanceText"
            android:fontFamily="@font/salsa"
            />

        <Button
            android:id="@+id/payButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay"
            android:layout_below="@id/balanceText"
            android:layout_marginTop="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/border_edit_btn"


            />
        <Button
            android:id="@+id/cancelPaymentButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="@drawable/border_edit_btn"
            android:layout_below="@id/payButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>


    </RelativeLayout>
</ScrollView>