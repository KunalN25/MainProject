<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantOperations.RestaurantFragment"
    android:orientation="vertical"
    android:weightSum="115">
    <ImageView
        android:id="@+id/fragmentRestaurantPhoto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="TODO" />
    <TextView
        android:id="@+id/fragmentRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/name"
        />
   <TextView
       android:id="@+id/phoneNumbers"
       android:layout_width="wrap_content"
       android:layout_height="0dp"
       android:layout_weight="10"
       android:text="Phone" />
    <TextView
        android:id="@+id/fragmentRestaurantAddress"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Address" />
    <TextView
        android:id="@+id/ratings"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="Ratings"/>

    <ListView
        android:id="@+id/fragmentListViewForRestaurantProperties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"/>



</LinearLayout>