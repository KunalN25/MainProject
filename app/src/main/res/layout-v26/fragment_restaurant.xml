<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RestaurantOperations.RestaurantFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_5"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_5">


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/ratings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/layout_for_edit"
            android:fontFamily="@font/salsa"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/ratings"
            android:textColor="#fff"
            android:elevation="10dp"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/fragmentRestaurantPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratings"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/fragmentRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantPhoto"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/salsa"
            android:text="@string/name"
            android:textSize="35sp"
            android:textColor="#fff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragmentCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:maxLines="2"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/salsa"
            android:text="@string/cuisine"
            android:textColor="#fff"
            android:textSize="25sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/phoneNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantAddress"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/border_edit_for_address"
            android:fontFamily="@font/salsa"
            android:paddingVertical="20dp"
            android:elevation="5dp"
            android:paddingHorizontal="20dp"
            android:text="@string/phone"
            android:textSize="15sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/fragmentRestaurantAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentCuisine"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/border_edit_for_address"
            android:fontFamily="@font/salsa"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:text="@string/address"
            android:elevation="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/orderNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/phoneNumbers"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/salsa"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/order_now"
            android:textSize="20sp"
            android:textColor="#fff"
            android:drawableEnd="@drawable/ic_arrow"


            />


        <TextView
            android:id="@+id/reviewsLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingHorizontal="10dp"
            android:textColor="#fff"
            android:layout_below="@id/orderNow"
            android:fontFamily="@font/salsa"
            android:orientation="vertical"
            android:text="@string/reviews"
            android:textSize="20sp"
            android:drawableEnd="@drawable/ic_arrow"


            />

        <TextView
            android:id="@+id/reviewNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/reviewsLoad"
            android:drawableEnd="@drawable/ic_arrow"
            android:fontFamily="@font/salsa"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:text="@string/add_a_review"
            android:textColor="#fff"
            android:textSize="20sp"


            />

    </RelativeLayout>
</ScrollView>

