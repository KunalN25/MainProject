<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".RestaurantOperations.RestaurantFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_3">

        <ImageView
            android:id="@+id/fragmentRestaurantPhoto"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@id/ratings"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/fragmentRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/salsa"
            android:text="@string/name"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragmentCuisine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/salsa"
            android:text="Cuisine"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/phoneNumbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentRestaurantAddress"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/border_edit_for_address"
            android:fontFamily="@font/salsa"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="@string/phone"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/fragmentRestaurantAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragmentCuisine"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/border_edit_for_address"
            android:fontFamily="@font/salsa"
            android:paddingVertical="5dp"
            android:paddingStart="10dp"
            android:text="@string/address"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ratings"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/layout_for_edit"
            android:fontFamily="@font/salsa"
            android:gravity="center"
            android:text="@string/ratings"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/orderNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/phoneNumbers"
            android:drawableRight="@drawable/ic_arrow"
            android:fontFamily="@font/salsa"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp"
            android:text="@string/order_now"
            android:textSize="20sp"


            />

        <TextView
            android:id="@+id/reviewsLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@id/orderNow"
            android:drawableRight="@drawable/ic_arrow"
            android:fontFamily="@font/salsa"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="5dp"
            android:text="@string/reviews"
            android:textSize="20sp"


            />


    </RelativeLayout>
</ScrollView>

