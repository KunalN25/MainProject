<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantOperations.RestaurantFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient_3"
    >
    <ImageView
        android:id="@+id/fragmentRestaurantPhoto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="TODO"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Name"
        android:id="@+id/fragmentRestaurantName"
        android:fontFamily="@font/salsa"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_marginTop="170dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="Cuisine"
        android:layout_marginTop="255dp"
        android:id="@+id/fragmentCuisine"
        android:fontFamily="@font/salsa"
        />

    <TextView
       android:id="@+id/phoneNumbers"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="5dp"
       android:layout_marginTop="8dp"
       android:text="@string/phone"

        android:paddingStart="10dp"
       android:textSize="25sp"
       android:background="@drawable/border_edit_for_address"
       android:layout_below="@id/fragmentRestaurantAddress"
       android:fontFamily="@font/salsa"/>
    <TextView
        android:id="@+id/fragmentRestaurantAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@id/fragmentRestaurantPhoto"
        android:paddingStart="10dp"
        android:background="@drawable/border_edit_for_address"
        android:fontFamily="@font/salsa"
        android:layout_marginHorizontal="5dp"/>
    <TextView
        android:id="@+id/ratings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Ratings"
        android:textAlignment="center"
        android:textSize="35sp"
        android:background="@drawable/layout_for_edit"
        android:textColor="#fff"
        android:layout_marginTop="105dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/salsa"/>

    <ListView
        android:id="@+id/fragmentListViewForRestaurantProperties"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border_edit_for_address"
        android:layout_below="@id/phoneNumbers"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>