<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantOperations.RestaurantMenu.MenuFragment"
    android:id="@+id/frameLAyout"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

  <ProgressBar
      android:id="@+id/menuProgressBar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:indeterminate="true"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:weightSum="1"
      android:background="@drawable/gradient_3">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:includeFontPadding="true"
        android:textSize="30sp"
        android:textAppearance="@style/DefaultAppFont"
        android:textAlignment="center"
        android:textColor="#fff"
        />
    <ListView
        android:id="@+id/menuList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/gradient_3"
        android:dividerHeight="10dp"
        android:background="@drawable/border_edit_for_menu"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edit_btn"
        android:text="ADD TO CART"
        android:layout_marginBottom="10dp"
        android:layout_weight="0"
        android:visibility="gone"
        />
  </LinearLayout>



</RelativeLayout>