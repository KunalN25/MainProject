<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edit"




    >

    <LinearLayout
        android:id="@+id/restaurantCardViewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:weightSum="5.5"


        >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="0dp"
            android:paddingStart="0dp"
            tools:targetApi="o"
            android:layout_weight="1"
            android:background="@drawable/border_edit_for_res_photo"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_weight="4"
            >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa"
                android:textColor="#000"
                android:paddingTop="0dp"
                android:textSize="22sp"
                android:textAppearance="@style/CardView"
                android:padding="6dp"/>

            <TextView
                android:id="@+id/cuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/salsa"
                android:paddingTop="0dp"
                android:textSize="17sp"

                />


        </LinearLayout>
        <TextView
            android:id="@+id/ratingOnRecyclerView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="0.0"
            android:fontFamily="@font/salsa"
            android:textColor="#fff"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:background="@drawable/border_edit_for_rating_green"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>
